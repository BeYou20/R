function doPost(e) {
  try {
    if (!e.postData || !e.postData.contents) {
      return createJsonResponse("error", "Ù„Ù… ÙŠØªÙ… Ø§Ø³ØªÙ‚Ø¨Ø§Ù„ Ø¨ÙŠØ§Ù†Ø§Øª.");
    }

